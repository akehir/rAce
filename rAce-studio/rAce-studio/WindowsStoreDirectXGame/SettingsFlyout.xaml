            </Grid>

            <!-- Settings Panel Content -->
            <Grid Grid.Row="1" Margin="40,24,23,0" VerticalAlignment="Top" x:Name="SettingsGrid">
                <Grid.Transitions>
                    <TransitionCollection>
                        <EntranceThemeTransition FromHorizontalOffset="120" />
                    </TransitionCollection>
                </Grid.Transitions>
                <StackPanel Orientation="Vertical" x:Name="GameSettingsStackPanel">
                    <TextBlock x:Uid="/SettingsResources/MusicOnOffTextBlock" Text="Music On/Off" Style="{StaticResource SettingsFlyoutLabelTextBlockStyle}" />
                    <ToggleSwitch x:Name="MusicOnOffToggleSwitch" Style="{StaticResource SettingsFlyoutToggleSwitchStyle}" />
                    <TextBlock x:Uid="/SettingsResources/MusicVolumeTextBlock" Text="Music Volume" Style="{StaticResource SettingsFlyoutLabelTextBlockStyle}" />
                    <Slider x:Name="MusicVolumeSlider" Minimum="0.0" Maximum="100.0" StepFrequency="5.0" SnapsTo="StepValues" Style="{StaticResource SettingsFlyoutSliderStyle}" />
                    <TextBlock x:Uid="/SettingsResources/SoundEffectsOnOffTextBlock" Text="Sound Effects On/Off" Style="{StaticResource SettingsFlyoutLabelTextBlockStyle}" />
                    <ToggleSwitch x:Name="SoundEffectsOnOffToggleSwitch" Style="{StaticResource SettingsFlyoutToggleSwitchStyle}" />
                    <TextBlock x:Uid="/SettingsResources/SoundEffectsVolumeTextBlock" Text="Sound Effects Volume" Style="{StaticResource SettingsFlyoutLabelTextBlockStyle}" />
                    <Slider x:Name="SoundEffectsVolumeSlider" Minimum="0.0" Maximum="100.0" StepFrequency="5.0" SnapsTo="StepValues" Style="{StaticResource SettingsFlyoutSliderStyle}" />
                    <TextBlock x:Name="WindowsMediaNotInstalledTextBlock" x:Uid="/SettingsResources/WindowsMediaNotInstalledTextBlock" Visibility="Collapsed" Text="This game makes use of Windows Media components for game music. You likely need to install the Microsoft Media Feature Pack to be able to hear the game's music. For more information see the following link:" Style="{StaticResource SettingsFlyoutRegularTextTextBlockStyle}" />
                    <HyperlinkButton x:Name="WindowsMediaNotInstalledHyperlinkButton" NavigateUri="http://go.microsoft.com/fwlink/?LinkId=262830" Visibility="Collapsed" Content="http://go.microsoft.com/fwlink/?LinkId=262830" Style="{StaticResource SettingsFlyoutHyperlinkButtonStyle}" />
                </StackPanel>
                <StackPanel x:Name="PrivacyPolicyStackPanel" Orientation="Vertical">
                    <!-- You could include your privacy policy directly.-->
                    <TextBlock Text="There is no privacy policy here. This must be fixed before submitting for certification." TextWrapping="Wrap" Style="{StaticResource SettingsFlyoutRegularTextTextBlockStyle}" />
                    <!-- This is another option. -->
                    <HyperlinkButton NavigateUri="http://www.example.com/privacy/" Content="http://www.example.com/privacy/" Style="{StaticResource SettingsFlyoutHyperlinkButtonStyle}" />
                </StackPanel>
                <StackPanel x:Name="AboutStackPanel" Orientation="Vertical">
                    <TextBlock x:Name="AboutAppNameTextBlock" Text="Game Name" Style="{StaticResource SettingsFlyoutLabelTextBlockStyle}" />
                    <TextBlock x:Name="AboutPublisherNameTextBlock" Text="Publisher Name" Style="{StaticResource SettingsFlyoutRegularTextTextBlockStyle}" />
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Uid="/SettingsResources/AboutVersionTextTextBlock" Text="noisreV" Style="{StaticResource SettingsFlyoutRegularTextTextBlockStyle}" />
                        <TextBlock x:Name="AboutVersionNumberTextBlock" Padding="8,0,0,0" Text="1.2.3.4" Style="{StaticResource SettingsFlyoutRegularTextTextBlockStyle}" />
                    </StackPanel>
                    <TextBlock x:Uid="/SettingsResources/AboutCopyrightTextTextBlock" Text="Copyright © 2012 X" Style="{StaticResource SettingsFlyoutRegularTextTextBlockStyle}" />
                </StackPanel>
            </Grid>

        </Grid>
    </Border>
</UserControl>
